<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black"
    tools:theme="@style/AppTheme.Main">

    <TextView
        android:id="@+id/conversationListUserInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/screen_padding"
        android:textAppearance="?textAppearanceHeadline6"
        android:textSize="@dimen/conversation_list_user_info_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Username" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversationListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollIndicators="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conversationListUserInfoTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
