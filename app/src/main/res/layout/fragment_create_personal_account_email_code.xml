<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/createPersonalAccountEmailCodeTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.194" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/createPersonalAccountEmailCodeTitleTextView"
        style="@style/TextView.Authentication.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_personal_account_email_code_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPersonalAccountEmailCodeTopGuideline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/createPersonalAccountEmailCodeDescriptionTextView"
        style="@style/TextView.Authentication.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/create_personal_account_email_code_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPersonalAccountEmailCodeTitleTextView" />

    <com.poovam.pinedittextfield.SquarePinField
        android:id="@+id/createPersonalAccountEmailCodePinEditText"
        style="@style/EditText.Pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_personal_account_code_digit_edit_text_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPersonalAccountEmailCodeDescriptionTextView">

        <requestFocus />
    </com.poovam.pinedittextfield.SquarePinField>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/createPersonalAccountEmailCodeVerticalCenterGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/createPersonalAccountEmailCodePinEditText" />

    <Button
        android:id="@+id/createPersonalAccountEmailCodeResendCodeTextView"
        style="@style/Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/create_personal_account_email_code_resend_code"
        app:layout_constraintEnd_toStartOf="@id/createPersonalAccountEmailCodeVerticalCenterGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="@dimen/create_personal_account_retry_button_vertical_bias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPersonalAccountEmailCodePinEditText" />

    <Button
        android:id="@+id/createPersonalAccountEmailCodeChangeMailTextView"
        style="@style/Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/create_personal_account_email_code_change_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="@dimen/create_personal_account_retry_button_vertical_bias"
        app:layout_constraintStart_toEndOf="@id/createPersonalAccountEmailCodeVerticalCenterGuideline"
        app:layout_constraintTop_toBottomOf="@+id/createPersonalAccountEmailCodePinEditText"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>