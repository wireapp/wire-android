<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black"
    tools:theme="@style/AppTheme.Dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?homeAsUpIndicator"
        app:title="@string/profile_screen_title" />

    <TextView
        android:id="@+id/profileUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_padding"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileToolbar"
        tools:text="Name Surname" />

    <TextView
        android:id="@+id/profileHandleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_user_detail_margin_top"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileUserNameTextView"
        tools:text="[at]handle" />

    <TextView
        android:id="@+id/profileTeamInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_user_detail_margin_top"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileHandleTextView"
        tools:text="in Wire" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePictureImageView"
        android:layout_width="@dimen/profile_user_picture_width"
        android:layout_height="@dimen/profile_user_picture_height"
        android:layout_marginStart="@dimen/profile_user_picture_margin_start"
        android:layout_marginTop="@dimen/profile_user_picture_margin_top"
        android:layout_marginEnd="@dimen/profile_user_picture_margin_end"
        android:layout_marginBottom="@dimen/profile_user_picture_margin_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTeamInfoTextView"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.Circle"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>
