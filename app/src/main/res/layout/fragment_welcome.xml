<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeCenterGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.450" />

    <ImageView
        android:id="@+id/welcomeLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_wire_logo"
        app:layout_constraintBottom_toTopOf="@+id/welcomeTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTitleTextView"
        style="@style/TextView.Authentication.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        app:layout_constraintBottom_toTopOf="@+id/welcomeCenterGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLogoImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomeCreateAccountButton"
        style="@style/Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_create_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeCenterGuideline"
        app:layout_constraintWidth_percent="@dimen/welcome_button_width_percent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomeLoginButton"
        style="@style/Button.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_login"
        app:layout_constraintBottom_toTopOf="@+id/welcomeEnterpriseLoginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeCreateAccountButton"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintWidth_percent="@dimen/welcome_button_width_percent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomeEnterpriseLoginButton"
        style="@style/Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/welcome_button_enterprise_login_margin_bottom"
        android:text="@string/welcome_enterprise_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="@dimen/welcome_button_width_percent" />

</androidx.constraintlayout.widget.ConstraintLayout>
