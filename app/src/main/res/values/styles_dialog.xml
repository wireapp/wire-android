<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material AlertDialog Guidelines: https://material.io/develop/android/components/dialogs#alert-dialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBody</item>
    </style>

    <style name="AlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="AlertDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>
