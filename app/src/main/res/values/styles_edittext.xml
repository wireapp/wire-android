<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">?attr/editableFieldBackgroundColor</item>
    </style>

    <style name="TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundColor">?attr/editableFieldBackgroundColor</item>
        <item name="boxBackgroundColor">?attr/editableFieldBackgroundColor</item>
    </style>

    <style name="TextInputLayout.NoBorder" parent="TextInputLayout.Outlined">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox" >
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextInputEditText.OutlinedBox.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextInputEditText.OutlinedBox.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/text_input_layout_password_hint</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText" />

    <style name="EditText.Pin">
        <item name="android:inputType">number</item>
        <item name="lineThickness">0dp</item>
        <item name="cornerRadius">2dp</item>
        <item name="fieldColor">@color/white</item>
        <item name="fieldBgColor">@color/white</item>
        <item name="highlightSingleFieldMode">true</item>
        <item name="noOfFields">6</item>
        <item name="highlightColor">?colorSecondary</item>
    </style>

</resources>