<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material TextAppearance Guidelines: https://material.io/develop/android/theming/typography -->
    <style name="TextView" parent="Widget.AppCompat.TextView" />

    <style name="TextView.Authentication" />

    <style name="TextView.Authentication.Title">
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:drawablePadding">@dimen/create_account_title_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Authentication.Description">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/create_account_description_padding</item>
        <item name="android:paddingEnd">@dimen/create_account_description_padding</item>
    </style>

    <style name="TextView.Authentication.Header">
        <item name="android:textAppearance">?textAppearanceHeadline2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextView.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="TextView.Toolbar.Title">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Conversation" />

    <style name="TextView.Conversation.username">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="TextView.Conversation.message">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

</resources>
