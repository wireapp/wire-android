FROM openjdk:8

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get update && \
    apt-get install -yq libc6 libstdc++6 zlib1g libncurses5 build-essential libssl-dev ruby ruby-dev --no-install-recommends && \
    apt-get clean

RUN gem install bundler

# Cleaning
RUN apt-get clean

ARG USER=android-agent
ARG USER_ID=1000
ARG GROUP_ID=1000
# default password for user
ARG USER_PASSWORD=1234567890
RUN useradd -m ${USER} --uid=${USER_ID} && echo "${USER}:${USER_PASSWORD}" | chpasswd
USER ${USER_ID}:${GROUP_ID}
WORKDIR /home/${USER}
ENV HOME /home/${USER}

# Download and untar Android SDK tools
RUN mkdir -p /home/${USER}/android-sdk-linux && \
    wget https://dl.google.com/android/repository/sdk-tools-linux-4333796.zip -O tools.zip && \
    unzip tools.zip -d /home/${USER}/android-sdk-linux && \
    rm tools.zip

# Set environment variable
ENV ANDROID_HOME /home/${USER}/android-sdk-linux
ENV ANDROID_SDK=${ANDROID_HOME}
ENV ANDROID_NDK_HOME ${ANDROID_HOME}/ndk-bundle
ENV NDK_HOME ${ANDROID_HOME}/ndk-bundle
ENV PATH ${ANDROID_HOME}/tools:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/emulator:${ANDROID_HOME}/tools/bin:$PATH

# Make license agreement
RUN yes | $ANDROID_HOME/tools/bin/sdkmanager --licenses

# Update and install using sdkmanager
RUN $ANDROID_HOME/tools/bin/sdkmanager "tools" "platform-tools" "build-tools;29.0.2" "platforms;android-29" "emulator" && \
$ANDROID_HOME/tools/bin/sdkmanager "system-images;android-29;default;x86" && \
$ANDROID_HOME/tools/bin/sdkmanager "extras;android;m2repository" "extras;google;m2repository" && \
$ANDROID_HOME/tools/bin/sdkmanager "ndk-bundle"

