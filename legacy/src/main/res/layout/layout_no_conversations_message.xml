<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/noConversationsVerticalCenterGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/no_conversations_layout_vertical_guideline_percent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/no_conversations_info_text_margin_bottom"
        android:fontFamily="sans-serif-light"
        android:paddingEnd="@dimen/no_conversations_info_text_padding_end"
        android:text="@string/no_conversations_info_message"
        android:textAppearance="?textAppearanceHeadline5"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toTopOf="@id/conversationListStartConversationArrowImageView"
        app:layout_constraintEnd_toEndOf="@id/noConversationsVerticalCenterGuideline"
        app:layout_constraintStart_toStartOf="@id/noConversationsVerticalCenterGuideline"
        app:layout_constraintWidth_percent="@dimen/no_conversations_info_text_width_percent" />

    <ImageView
        android:id="@+id/conversationListStartConversationArrowImageView"
        android:layout_width="@dimen/design_bottom_navigation_active_item_max_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_padding"
        android:src="@drawable/ic_start_conversation_arrow_down"
        android:tint="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/noConversationsVerticalCenterGuideline"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
